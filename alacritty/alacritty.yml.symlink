live_config_reload: true

alt_send_esc: false

window:
  opacity: 0.90
  padding:
    x: 8
    y: 8
  dynamic_padding: false
  decorations: buttonless

font:
  normal:
    family: "SFMono Nerd Font"
    style: Regular
  size: 14.0
  use_thin_strokes: true

key_bindings:
  - { key: K,  mods: Alt,           chars: "\x1bk"                       }
  - { key: J,  mods: Alt,           chars: "\x1bj"                       }
