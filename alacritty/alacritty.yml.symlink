live_config_reload: true

env:
  TERM: xterm-256color

alt_send_esc: false

window:
  opacity: 1
  padding:
    x: 2
    y: 2
  dynamic_padding: true
  decorations: buttonless

font:
  normal:
    family: "SFMono Nerd Font"
    style: Regular
  size: 14.0

import:
  - ~/.dotfiles/plugins/dotfiles-alberto-chamorro/alacritty/themes/catppuccin/catppuccin-mocha.yml
#  - ~/.dotfiles/plugins/dotfiles-alberto-chamorro/alacritty/themes/catppuccin/catppuccin-macchiato.yml
#  - ~/.dotfiles/plugins/dotfiles-alberto-chamorro/alacritty/themes/catppuccin/catppuccin-frappe.yml
#  - ~/.dotfiles/plugins/dotfiles-alberto-chamorro/alacritty/themes/catppuccin/catppuccin-latte.yml

mouse:
  hide_when_typing: true
  save_to_clipboard: true

key_bindings:
  - { key: K,  mods: Alt,           chars: "\x1ak"           }
  - { key: J,  mods: Alt,           chars: "\x1aj"           }
  - { key: G,  mods: Command,       chars: "\x01g"           }
  - { key: W,  mods: Command,       chars: "\x01x"           }
  - { key: P,  mods: Command,       chars: "\x01F"           }

